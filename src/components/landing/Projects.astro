---
import projects from "../../config/projects.json"
---
<section class="bg-zinc-900 rounded-xl">
    <h2 class="font-bold text-5xl text-center">Projects</h2>
{
    projects.map((projects) => (
    <div class= "p-10 rounded-xl flex flex-col md:flex-row text-center md:text-left gap-4">
        <div class="flex-1 flex flex-col gap-y-3">
            <h2 class="text-xl font-bold my-4">{projects.title}</h2>
            <p>{projects.description}</p>
            <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">More Info</button>
        </div>
        <div class="flex-1S">
            <img src={projects.image} class="w-72 m-auto">
        </div>
    </div>
))
}
</section>